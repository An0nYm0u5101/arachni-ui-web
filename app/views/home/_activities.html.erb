<% if @activities.any? %>
    <%= my_paginate @activities, param_name: 'activities_page', remote: true,
                    params: { render: 'activities' } %>

    <ul class="notifications unstyled">
        <% @activities.each do |activity| %>
            <li>
                <%= render partial: 'shared/notification',
                           locals: { notification: activity } %>
            </li>
        <% end %>
    </ul>
<% else %>
    <p class="alert alert-info">
        You don't seem to have been up to much lately...or ever.
    </p>
<% end %>
