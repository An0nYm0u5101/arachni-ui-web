<div id="users">
    <div class="row-fluid">
        <div class="span10">
            <div class="page-header">
                <h1><%= @user.name %> <small><%= @user.email %></small></h1>
            </div>
        </div>

        <div class="span2">
            <% if can? :edit, User %>
                <%= link_to edit_user_path( @user ), title: 'Edit', class: 'btn btn-warning' do %>
                    <i class="icon-pencil"></i>
                <% end %>
            <% end %>
            <% if can?( :delete, User ) %>
                <%= link_to @user, title: 'Delete', method: :delete, class: 'btn btn-danger',
                            data: { confirm: 'Are you sure?' } do %>
                    <i class="icon-trash"></i>
                <% end %>
            <% end %>
        </div>
    </div>

    <% if (roles = @user.roles).any? %>
        <h2>Roles</h2>
        <ul>
        <% roles.each do |role| %>
            <li><%= role.name %></li>
        <% end %>
        </ul>
    <% end %>

    <% if (scans = @user.own_scans).any? %>
        <h2>Scans<small>[<%= scans.size %>]</small></h2>
        <ul>
            <% scans.each do |scan| %>
                <li><%= link_to scan, scan_path( scan ) %></li>
            <% end %>
        </ul>
    <% end %>
</div>
