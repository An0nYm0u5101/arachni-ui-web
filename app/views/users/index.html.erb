<div id="users">
    <h1>Listing users</h1>

    <p>
        <%= link_to new_user_path, class: 'btn btn-primary' do %>
            <i class="icon-plus"></i> New User
        <% end %>
    </p>

    <table class="table table-striped table-hover table-condensed">
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Scans</th>
            <th></th>
        </tr>
        </thead>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                    <% if user.own_scans.light.any? %>
                        <%= user.own_scans.light.map { |scan| link_to scan.url, scan_path( scan ) }.join( ', ' ).html_safe %>
                    <% else %>
                        None yet...
                    <% end %>
                </td>
                <td>
                    <% if can? :show, user %>
                        <%= link_to user, title: 'Show user', class: 'btn btn-info' do %>
                            <i class="icon-eye-open"></i>
                        <% end %>
                    <% end %>

                    <% if can? :edit, user %>
                        <%= link_to edit_user_path( user ), title: 'Edit user',
                                    class: 'btn btn-warning' do %>
                            <i class="icon-pencil"></i>
                        <% end %>
                    <% end %>

                    <% if can? :destroy, user %>
                        <%= link_to user, title: 'Delete user',
                                    class: 'btn btn-danger', method: :delete,
                                    data: { confirm: 'Are you sure?' } do %>
                            <i class="icon-trash"></i>
                        <% end %>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </table>
</div>
