    <a href="#shareScan" role="button" class="btn" data-toggle="modal">
        <i class="icon-share"></i>
        Share scan
    </a>

    <div id="shareScan" class="modal hide fade" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3 id="myModalLabel">Share with:</h3>
        </div>

        <%= simple_form_for( @scan ) do |f| %>
        <div class="modal-body">
            <%= f.error_notification %>
                <%= f.association :users, label: '',
                                  collection: User.all - [current_user],
                                  as: :check_boxes %>

        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <%= f.button :submit, class: 'btn btn-primary', value: 'Share' %>
        </div>
        <% end %>
    </div>
