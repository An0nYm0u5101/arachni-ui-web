<% title "Scans" %>

<% add_to_sidebar do %>
    <div id="scan-groups-sidebar">
        <%= render 'scan_groups/form_with_list' %>
    </div>
<% end %>

<div id="scans">
    <div class="page-header">
        <h1>Scans</h1>

        <div class="lead">
            Start, manage and stay up to date on your scans.
        </div>
    </div>

    <p>
        <%= link_to new_scan_path, class: 'btn btn-primary' do %>
            <i class="icon-plus"></i> New Scan
        <% end %>
    </p>

    <div id="revision-form-modal" class="modal hide fade"
         tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
    </div>

    <div id="tables"
         data-refresh-url="<%= scans_url( format: :js, params: params ) %>"
         data-refresh-rate="<%= HardSettings.scan_refresh_rate %>"
         data-refresh-type='js'
    >
        <%= render 'tables' %>
    </div>

</div>
