<h2>Active</h2>

<% if @active_scans.any? %>

    <%= render partial: 'table', locals: { scans: @active_scans } %>

<% else %>
    <p class="alert alert-info">
        There are no active scans at the moment, <a href="<%= new_scan_path %>">start one now</a>.
    </p>
<% end %>

<h2>Finished</h2>

<% if @inactive_scans.any? %>

    <%= my_paginate @inactive_scans %>
    <%= render partial: 'table', locals: { scans: @inactive_scans, treat_as_running: false }  %>

<% else %>
    <p class="alert alert-info">
        There are no finished scans at the moment.
    </p>
<% end %>
