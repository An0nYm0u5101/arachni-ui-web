<% if @group %>
    <p>
        You are seeing scans of the <strong><%= @group.name %></strong> group:
    </p>

    <blockquote>
        <%= m @group.description %>
    </blockquote>

    <hr/>
<% end %>

<h2>Active
    <small>[<%= @counts[:active]['total'] %>]</small>
</h2>
<%= render partial: 'table', locals: { scans: @active_scans } %>


<h2>Finished
    <small>[<%= @counts[:finished]['total'] %>]</small>
</h2>
<%= render partial: 'table', locals: { scans: @finished_scans, treat_as_running: false } %>
