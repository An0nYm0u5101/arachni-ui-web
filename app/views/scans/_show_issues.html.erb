<% issues = @scan.active? ? @scan.sorted_issues : @scan.report.issues %>

<div class="row">
    <div class="span12" id='issues'>
        <h2>Issues <small>[<%= issues.size %>]</small></h2>

        <a href="#" onclick="$('.collapse').collapse( 'show' ); return false;">Expand all</a>
        |
        <a href="#" onclick="$('.collapse').collapse( 'hide' ); return false;">Collapse all</a>

        <hr/>

        <% if @scan.issues.any? %>
            <%= render partial: '/shared/issues_twin_accordion',
                       locals: {
                               issues:     issues,
                               class_name: 'span6'
                       } %>

    <% else %>
            <p class="alert alert-info">
                No issues discovered<%= ' yet' if @scan.active? %>.
            </p>
        <% end %>

    </div>
</div>
