<%= simple_form_for( [@issue.scan, @issue] ) do |f| %>
    <%= f.error_notification %>

    <h2>State</h2>

    <div class="form-inputs">
        <div class="row-fluid">
            <div class="span6">
                <%= f.input :fixed, label: 'Mark as fixed' %>
            </div>
            <div class="span6">
                <%= f.input :false_positive,
                            label: 'Mark as false positive' %>

                <p class="help-block" id="false-positive-report-nudge">
                    <em>You may also want to <a href="https://github.com/Arachni/arachni/issues">
                    report this upstream</a> so that it won't happen again.</em>
                </p>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span6">
                <%= f.input :requires_verification %>

                <p class="help-block">
                    Does this issue require verification by a human?
                </p>
            </div>
        </div>

        <div id="verification-container" class="well hide">
            <div class="row-fluid">
                <div class="span6">
                    <%= f.input :verified %>

                    <p class="help-block">
                        Flag this issue as verified and please add the verification
                        steps you followed to the text-area bellow.
                    </p>
                </div>
            </div>

            <hr/>

            <%= f.input :verification_steps,
                        hint: '(You can use <a href="http://daringfireball.net/' +
                            'projects/markdown/syntax">Markdown</a> for text formatting.)' %>
        </div>

        <hr/>

        <h2>Remediation</h2>

        <% if !@issue.remedy_guidance.to_s.empty? %>
            <h3>Guidance</h3>

            <blockquote>
                <%= @issue.remedy_guidance %>
            </blockquote>
        <% end %>

        <% if !@issue.remedy_code.to_s.empty? %>
            <h3>Sample code</h3>
            <code><%= @issue.remedy_code %></code>
        <% end %>

        <div class="row-fluid">
            <div class="span12">
                <%= f.input :remediation_steps, label: 'Steps',
                            hint: '(You can use <a href="http://daringfireball.net/' +
                              'projects/markdown/syntax">Markdown</a> for text formatting.)' %>

                <p class="help-block">
                    Describe a way to remedy this issue.
                </p>
            </div>
        </div>
    </div>

    <div class="form-actions">
        <%= f.button :submit %>
    </div>
<% end %>
