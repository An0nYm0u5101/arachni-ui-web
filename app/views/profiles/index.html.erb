<% title 'Profiles' %>

<div class="page-header">
    <h1>Profiles</h1>

    <div class="lead">
        Maintain and use scan configuration profiles to make your job easier.
    </div>
</div>

<% if can? :edit, Profile %>
<p>
    <%= link_to new_profile_path, class: 'btn btn-primary' do %>
        <i class="icon-plus"></i> New Profile
    <% end %>
</p>
<% end %>

<div id='profiles'>
    <%= render partial: 'table', formats: :html, locals: { profiles: @profiles } %>
</div>
