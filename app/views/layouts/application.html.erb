<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            <%= "#{yield( :title )} - " if content_for?( :title ) %>
            <%= "#{title_breadcrumbs} - " if !title_breadcrumbs.empty? %>
            Arachni WebUI
        </title>
        <meta name="description" content="">
        <meta name="author" content="">

        <link rel="shortcut icon" href="/assets/favicon.png" />

        <%= stylesheet_link_tag    "application", media: "all" %>
        <%= javascript_include_tag "application" %>
        <%= csrf_meta_tags %>
        <%= yield( :head ) %>
    </head>
    <body id="top" data-offset="60" data-target=".subnav" data-spy="scroll">
        <header class="navbar navbar-inverse navbar-fixed-top">
            <nav class="navbar-inner">
                <div id="navigation-top" class="container"
                     data-refresh-url="<%= navigation_url %>">
                    <%= render 'layouts/navigation' %>
                </div>
            </nav>

            <%= render_breadcrumbs %>
        </header>

        <div id="main" role="main">
            <div class="container">
                <div class="content">
                    <%= render_subnav %>

                     <div class="row">
                        <div class="span12">
                            <%= render 'layouts/messages' %>
                            <%= yield.force_encoding( 'utf-8' ) %>
                        </div>
                    </div>
                </div>
            </div> <!--! end of .container -->
        </div> <!--! end of #main -->

        <% if Rails.env.development? %>
        <div id="footnotes_holder"></div>
        <% end %>

        <div id="loading" class="hide modal progress progress-striped active">
            <div class="bar" style="width: 100%;"></div>
        </div>

        <footer>
            <div class="row">
                <div class="span4 hidden-phone"></div>
                <div class="span3 hidden-phone">
                    <h4>Help</h4>
                    <hr/>
                    <ul class='unstyled'>
                        <li><a href="https://github.com/Arachni/arachni/wiki/Web-user-interface">User Guide</a></li>
                        <li><a href="http://github.com/Arachni/arachni/wiki">Wiki</a></li>
                        <li><a href="http://support.arachni-scanner.com">Support</a></li>
                        <li><a href="https://github.com/Arachni/arachni/issues">Report a bug</a></li>
                    </ul>
                </div>
                <div class="span4 hidden-phone">
                    <h4>Interesting links</h4>
                    <hr/>
                    <ul class='unstyled'>
                        <li><a href="http://arachni-scanner.com">Homepage</a></li>
                        <li><a href="http://arachni-scanner.com/blog">Blog</a></li>
                        <li><a href="http://twitter.com/ArachniScanner">Twitter feed</a></li>
                        <li><a href="https://github.com/Arachni/arachni/tree/experimental">The bleeding edge, Arachni's experimental branch</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="span12 offset4">
                    <p>
                        &copy; 2012 <a href="mailto:tasos.laskos@gmail.com">Tasos Laskos</a>
                    </p>
                </div>
            </div>
        </footer>
    </body>
</html>
