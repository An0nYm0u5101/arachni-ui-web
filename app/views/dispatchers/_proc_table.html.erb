<% scan = nil %>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>PID</th>
            <th>URL</th>
            <th>Owner</th>
            <th>Added to pool at</th>
            <th>Dispatched at</th>
            <th></th>
        </tr>
    </thead>
    <% jobs.each do |job| %>
    <% scan = Scan.find_by_instance_url( job['url'] ) %>

    <tr <%= 'class="warning"'.html_safe if !scan %> >
        <td><%= job['pid'] %></td>

        <td>
            <% if scan %>
                    <%= link_to job['url'], scan %>
                <% else %>
                <%= job['url'] %>
            <% end %>
        </td>

        <td><%= job['owner'] %></td>
        <td><%= job['birthdate'] %></td>
        <td><%= job['starttime'] %></td>
    </tr>
    <% end %>
</table>

<% if !scan %>
    <p class="alert alert-info">
        Rows in yellow indicate that the Instance was not created using the WebUI.
    </p>
<% end %>
